@model IEnumerable<Booking>
@{
    ViewData["Title"] = "Booking";
    Layout = "_PanelLayout";
}

<main class="main-content bgc-grey-100">
    <div id="mainContent">
        <link rel="stylesheet" href="https://allyoucan.cloud/cdn/icofont/1.0.1/icofont.css" integrity="sha384-jbCTJB16Q17718YM9U22iJkhuGbS0Gd2LjaWb4YJEZToOPmnKDjySVa323U+W7Fv" crossorigin="anonymous">

        <div class="container">
            <div class="row">
                <!-- SUBMENU START -->
                @Html.Partial("BookingSubmenu")
                <!-- SUBMENU END -->
                <!-- MAIN CONTENT START -->
                <div class="col-md-9">
                    <div class="osahan-account-page-right shadow-sm bg-white p-30 h-100">
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane  fade  active show" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                                
                                @foreach (Booking item in Model)
                                {
                                <!-- Item begin-->
                                <div class="bg-white card mb-4 order-list shadow-sm">
                                    <div class="gold-members p-10">
                                        <div class="media">
                                            <div class="media-body">
                                                <a href="#">
                                                    <span class="float-right text-info"> <i class="icofont-clock-time ml-2"></i> Published on @item.Date </span>
                                                </a>
                                                <h6 class="mb-2">
                                                    <a href="#"></a>
                                                    <a href="#" class="text-black">@item.BookingTitle</a>
                                                </h6>
                                                <p class="text-gray mb-1">
                                                    <i class="icofont-location-arrow"></i> @item.Location
                                                </p>
                                                <p class="text-gray mb-3"><i class="icofont-clock-time"></i> Available on: @item.Date  <i class="icofont-clock-time"></i> Category: @item.CategoryId</p>
                                                <p class="text-dark">
                                                    @item.WorkingDetail
                                                </p>
                                                <hr>
                                                <div class="float-right">
                                                    <form asp-action="BookingDetails" asp-controller="Booking" method="get">
                                                        <input type="hidden" name="BookingID" value="@item.BookingId"/>
                                                        <button type="submit" class="btn btn-sm btn-primary" ><i class="icofont-check-circled"></i> DETAILS</button>
                                                        <a class="btn btn-sm btn-outline-danger" href="#"><i class="icofont-headphone-alt"></i> CANCEL</a>
                                                    </form>
                                                </div>
                                                <p class="mb-0 text-black text-primary pt-2">
                                                    <span class="text-black font-weight-bold"> Total Paid:</span> $@item.Price
                                                </p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                }
                                <!--Item end-->
                                
                            </div>
                        </div>
                    </div>
                </div>
                <!-- MAIN CONTENT END -->
            </div>
        </div>
    </div>
</main>